    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="470.0" prefWidth="724.0" styleClass="main" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="heading" alignment="CENTER" contentDisplay="CENTER" layoutX="227.0" layoutY="14.0" prefHeight="22.0" prefWidth="685.0" textAlignment="CENTER" />
            <Button fx:id="btnContinue" layoutX="395.0" layoutY="60.0" mnemonicParsing="false" onAction="#continueSim" prefHeight="34.0" prefWidth="102.0" styleClass="button-black" text="Continue" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
            <Button fx:id="btnPause" layoutX="527.0" layoutY="60.0" mnemonicParsing="false" onAction="#pauseSim" prefHeight="34.0" prefWidth="102.0" styleClass="button-black" text="Pause" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
