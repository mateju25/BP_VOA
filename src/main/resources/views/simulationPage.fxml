               <children>
                  <LineChart fx:id="chart" prefHeight="527.0" prefWidth="993.0" stylesheets="@../css/main.css">
                     <xAxis>
                        <NumberAxis label="Generations" side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis label="Fitness" lowerBound="1.0" minorTickCount="8" side="LEFT" tickUnit="0.1" upperBound="1.0" />
                     </yAxis>
                  </LineChart>
               </children></Pane>
            <Button layoutX="22.0" layoutY="60.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="187.0" styleClass="button-black" text="Switch visualization" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
